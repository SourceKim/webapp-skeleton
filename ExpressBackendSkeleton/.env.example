# 服务器配置
PORT=3000
NODE_ENV=development/production

# 数据库配置
MYSQL_HOST=127.0.0.1
MYSQL_PORT=3306
MYSQL_USER=root
MYSQL_PASSWORD=
MYSQL_DATABASE=database_name

# JWT配置
JWT_SECRET=your_jwt_secret_key
JWT_EXPIRES_IN=24h

# API配置
API_VERSION=/api/v1
API_DOCS_JSON_PATH=/api-docs.json
API_DOCS_PATH=/api-docs

# CORS配置
CORS_ADMIN_ORIGIN=http://127.0.0.1:5173
CORS_APP_ORIGIN=http://127.0.0.1:10086
CORS_METHODS=GET,POST,PUT,DELETE,PATCH,OPTIONS
CORS_HEADERS=Content-Type,Authorization

# 静态文件配置
UPLOADS_PATH=/uploads
PUBLIC_PATH=/public

# 日志配置
LOG_LEVEL=debug

# 超级管理员配置
ADMIN_USERNAME=super_admin
ADMIN_EMAIL=super_admin@example.com
ADMIN_PASSWORD=Admin@123
ADMIN_NICKNAME=超级管理员
ADMIN_PHONE=13800000000
ADMIN_GENDER=MALE
ADMIN_BIRTHDATE=1990-01-01

# 文件上传配置扩展
MAX_FILE_SIZE=10485760
ALLOWED_MIME_TYPES=image/*,audio/*,video/*,application/pdf,text/plain
